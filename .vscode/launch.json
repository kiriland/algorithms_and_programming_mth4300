{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Active File: Debug (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hidden/.build/${relativeFileDirname}/${fileBasenameNoExtension}",
            "cwd": "${fileDirname}",
            "args": [],
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: build active file (g++)"
        }
    ]
}